{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist/",
    "types": [
      "node"
    ],
    "declaration": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "paths": {
      "@/*": ["./src/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "src/*.ts"
  ]
}
